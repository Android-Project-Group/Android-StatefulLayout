<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="cz.kinst.jakub.sample.statefullayout">

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity
			android:name=".MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".CustomizationsActivity"
			android:label="@string/activity_customizations"/>
		<activity
			android:name=".LoadingActivity"
			android:label="@string/activity_loading"/>
		<activity
			android:name=".DataBindingActivity"
			android:label="@string/activity_data_binding"/>
	</application>

</manifest>
